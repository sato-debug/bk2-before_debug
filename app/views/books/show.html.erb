
<div class="row">

	<%= render 'books/error_messages', book: @book  %>


	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', book: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@books.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @books.user.name %>
						<% end %>
					</td>
					<td><%= link_to @books.title, book_path(@books) %></td>
					<td><%= @books.body %></td>

		             <% if current_user == @user %>
						<td><%= link_to "Edit", edit_book_path(@books), class: "btn-sm btn-success edit_book_#{@books.id}" %></td>
						<td><%= link_to "Destroy", book_path(@books), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
		             <% end %>

				</tr>
			</table>

	</div>
</div>

